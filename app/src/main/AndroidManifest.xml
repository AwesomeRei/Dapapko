<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andre.firebasecweather" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowFullResep"
            android:label="@string/title_activity_second"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.andre.firebasecweather.MainActivity" />
        </activity>
        <activity
            android:name=".BelanjaActivity"
            android:label="@string/title_activity_belanja"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".MasakActivity"
            android:label="@string/title_activity_masak"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".InputActivity"
            android:label="@string/title_activity_input"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".TambahBahan" >
        </activity>
    </application>

</manifest>
